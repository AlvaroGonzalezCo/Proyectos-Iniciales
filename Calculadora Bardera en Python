from math import sqrt

print("==Calculadorita==")
print("Eligi una opcion campeon/a")
print("1-Suma")
print("2-Resta")
print("3-Multiplicacion")
print("4-Division")
print("5- Potencia")
print("6-Raiz")
x= input("Escribi tu eleccion bestia: ")
y=float (x)

if(y==1):
    a= input("Introducí el primer numero: ")
    b= input("Introducí el segundo numero: ")
    a2= float(a)
    b2= float(b)
    resultado= a2 + b2
    print("Bro tu resultado es:",resultado)
    
elif (y==2):
    a= input("Introducí el primer numero: ")
    b= input("Introducí el segundo numero: ")
    a2= float(a)
    b2= float(b)
    resultado= a2 - b2
    print("Brodi tu resultado es:" ,resultado)

elif(y==3):
    a= input("Introducí el primer numero: ")
    b=input("Introducí el segundo numero: ")
    a2=float(a)
    b2=float(b)
    resultado= a2 * b2 
    print("Capo/a tu resultado es: ", resultado)

elif(y==4):                  
   a= input("Introducí el primer numero: ")
   b=input("Introducí el segundo numero: ")
   a2=float(a)
   b2=float(b)
   resultado= a2 / b2
   print("Aca esta tu resultado: ", resultado)

elif (y==5):
  a = input("Pone el numero que queres potenciar: ")
  b = input("Pone a que potencia: ")
  a2 = float(a)
  b2 = float(b)
  resultado = a2 ** b2
  print("este es el resultado", resultado)
 
elif (y == 6):
  a = input("Pone el numero que queres radicar: ")
  a2 = float(a)
  resultado = sqrt(a2)
  print("Tu resultado es: ", resultado)
 

resultado=input("Ese fue tu resultado capoeira?")
if(resultado=="no"):
 print("mentira capo")
elif(resultado == "si"):
  print("lo sabia idiota")
else:
   print("no se que pusiste pero yo estoy en lo correcto masterigena") 

    
